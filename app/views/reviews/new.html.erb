

<%= form_for(@review) do |f|%>
   
    <% if params[:cooky_id] %>
    <h1> Create A Review for <%= @review.cookie.flavour %> - <%= @review.cookie.brand.name %> </h1>
  
    <% else %>
    
        <h1> Create Review </h1>

  <% end %>
  <div>

 <div>
 <%= f.label :rating %><br>
 <%= f.number_field :rating, min:0, max:5 %>
</div>
<br>
<div>
 <%= f.label :title %><br>
 <%= f.text_field :title %>
</div>
<br>
<div>
 <%= f.label :content %><br>
 <%= f.text_area :content %>
</div>
<br>


<%= f.hidden_field :cookie_id %>
        
<%= f.submit "Om Nom Nom Nom" %>

<% end %>
        